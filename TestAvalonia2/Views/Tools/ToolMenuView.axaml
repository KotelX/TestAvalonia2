<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tools="using:TestAvalonia2.ViewModels.Tools"
             xmlns:vm="using:TestAvalonia2.ViewModels"
             xmlns:behaviors="using:TestAvalonia2.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:Tools.ToolMenuViewModel"
             x:Class="TestAvalonia2.Views.Tools.ToolMenuView">
   <Grid Focusable="True">
    <TreeView x:Name="AssetsTreeView"
                  ItemsSource="{Binding RootNodes}"
                  behaviors:TreeViewBehaviors.DoubleClickCommand="{Binding TreeItemDoubleClickCommand}">
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}"/>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
  </Grid>
</UserControl>
